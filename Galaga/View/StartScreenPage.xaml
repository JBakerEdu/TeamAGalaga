<Page
    x:Class="Galaga.View.StartScreenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga.View">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Galaga" FontSize="48" FontWeight="Bold" TextAlignment="Center" />

            <Button Content="Start Game" Click="StartGame_Click" Width="200" Height="50" />
            <Button Content="High Scores" Click="ViewHighScores_Click" Width="200" Height="50" />
            <Button Content="Reset High Scores" Click="ResetHighScores_Click" Width="200" Height="50" />
        </StackPanel>
    </Grid>
</Page>
