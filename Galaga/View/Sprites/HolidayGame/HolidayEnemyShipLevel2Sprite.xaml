<holidayGame:HolidayEnemyShipLevel1Sprite
    x:Class="Galaga.View.Sprites.HolidayGame.HolidayEnemyShipLevel2Sprite"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:holidayGame="using:Galaga.View.Sprites.HolidayGame"
    mc:Ignorable="d"
    d:DesignHeight="60"
    d:DesignWidth="50"
    Height="60"
    Width="50">

    <UserControl.Resources>
        <SolidColorBrush x:Key="PotBrush" Color="LightGray" />
    </UserControl.Resources>

    <Canvas>
        <holidayGame:HolidayEnemyShipLevel1Sprite></holidayGame:HolidayEnemyShipLevel1Sprite>
        <Polygon Points="15,50 35,50 40,44 10,44" Fill="{StaticResource PotBrush}" />
        <Polygon Points="15,50 35,50 40,44 10,44" Fill="{StaticResource PotBrush}" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="6" />

    </Canvas>
</holidayGame:HolidayEnemyShipLevel1Sprite>
