<Page
    x:Class="Galaga.View.HighScorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Galaga"
    DataContext="{Binding RelativeSource={RelativeSource Self}}" Height="510" Width="695">

    <Grid Width="700" Height="500">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Content="Back to Start" Grid.Row="0" Click="BackToStart_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" />

        <ComboBox x:Name="SortSelector"
              Grid.Row="1"
              SelectionChanged="SortSelector_SelectionChanged"
              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <ComboBoxItem Content="Score" />
            <ComboBoxItem Content="Name" />
            <ComboBoxItem Content="Level" />
        </ComboBox>

        <ListView x:Name="ScoreListView" Grid.Row="2" ItemsSource="{Binding HighScores}" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding PlayerName}" Width="100"/>
                        <TextBlock Text="{Binding Score}" Width="50"/>
                        <TextBlock Text="{Binding Level}" Width="50"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
